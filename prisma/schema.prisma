generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Payment {
  id        String   @id @default(uuid())
  orderId   String   @unique
  amount    Float
  status    String   // pending, completed, refunded
  method    String   // card, cash
  createdAt DateTime @default(now())
}